<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_marginBottom="@dimen/_2sdp"
    app:ignore="NamespaceTypo">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <LinearLayout
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:weightSum="1">

            <de.hdodenhof.circleimageview.CircleImageView
               android:padding="@dimen/_10sdp"
                android:id="@+id/user_profile_icon"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:src="@drawable/zafar"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorPrimaryDark"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="NAME : Zafar Hussain "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#087675"
                    android:textSize="14sp" />

            </LinearLayout>
                <LinearLayout
                    android:weightSum="3"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/user_age"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Age : 24"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#087675"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/user_height"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Height : 5'11"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#087675"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/user_weight"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Weight : 65"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#087675"
                        android:textSize="12sp" />

                </LinearLayout>
                <TextView
                    android:id="@+id/user_qualifiaction"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Qualification : BE(CSE)"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#087675"
                    android:textSize="12sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Shorlisted"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#087675"
                        android:textSize="12sp" />
                    <CheckBox
                        android:layout_marginTop="@dimen/_5sdp"
                        android:checked="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                   android:layout_marginBottom="@dimen/_10sdp"
                        android:drawableRight="@android:drawable/ic_menu_send"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Send Msg"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#087675"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Send Interested"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#087675"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>