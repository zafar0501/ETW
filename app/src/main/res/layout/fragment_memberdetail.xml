<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#ffffff"
            android:orientation="vertical"
            android:padding="10dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfileViewImage"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@mipmap/zafar"
                app:civ_border_color="@color/midGreen" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:paddingTop="15sp"
                android:text="Sheikh Zafar Hussain"
                android:textSize="14sp" />
            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp"
                    android:paddingTop="15sp"
                    android:text="Yashesh Maniar"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp"
                    android:text="View my profile"
                    android:textColor="#d7d6d6"
                    android:textSize="10sp" />

            </LinearLayout>-->


        </LinearLayout>


        <TextView
            android:layout_margin="5dp"
            android:id="@+id/tvMyPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.5sp"
            android:background="#f7f7f7"
            android:gravity="left"
            android:padding="4sp"
            android:paddingBottom="10sp"
            android:paddingLeft="10sp"
            android:paddingTop="10sp"
            android:text="My place"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <android.support.v7.widget.RecyclerView
            android:layout_margin="10dp"
            android:id="@+id/rvPersonalDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff" />

        <TextView
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:id="@+id/tvEducation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.5sp"
            android:background="#f7f7f7"
            android:gravity="left"
            android:padding="4sp"
            android:paddingBottom="10dp"
            android:paddingLeft="10sp"
            android:paddingTop="10dp"
            android:text="Education"
            android:textSize="16sp"
            android:visibility="visible" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvJobDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#ffffff" />

    </LinearLayout>
</ScrollView>