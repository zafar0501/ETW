<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"

    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.microlan.www.perfectmatrimony.authenticate.view.HomeActivity"
    tools:showIn="@layout/app_bar_home">

    <ScrollView
        android:layout_marginTop="25dp"
        android:background="@color/white"
        android:id="@+id/scv_login_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



    <TextView
        android:paddingLeft="25dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:text="Profile Completed 35 %"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

            <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dsb_min="0"
                app:dsb_value="35"
                app:dsb_max="100"
                />
            <android.support.v7.widget.CardView
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:contentDescription="@string/app_name"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:src="@mipmap/matrimony_three" />
            </android.support.v7.widget.CardView>
<android.support.v7.widget.CardView
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="#ffffff"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:weightSum="1.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_search"
                    android:layout_weight=".5"
                    android:layout_gravity="center"
                    android:src="@mipmap/search"
                    android:layout_width="75dp"
                    android:layout_height="75dp" />
                <ImageView
                    android:id="@+id/img_newsfeed"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight=".5"
                    android:layout_gravity="center"
                    android:src="@mipmap/newsfeed"
                    android:layout_width="75dp"
                    android:layout_height="75dp" />

                <ImageView
                    android:id="@+id/img_towards"
                    android:layout_weight=".5"
                    android:layout_gravity="center"
                    android:src="@mipmap/towards"
                    android:layout_width="75dp"
                    android:layout_height="75dp" />

        </LinearLayout>
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:weightSum="1.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Search"
                android:layout_weight=".5"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="News Feed"
                android:layout_weight=".5"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Towards"
                android:layout_weight=".5"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:weightSum="1.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_community"
                android:layout_weight=".5"
                android:layout_gravity="center"
                android:src="@mipmap/community"
                android:layout_width="75dp"
                android:layout_height="75dp" />
            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/img_ads"
                android:layout_weight=".5"
                android:layout_gravity="center"
                android:src="@mipmap/ads"
                android:layout_width="75dp"
                android:layout_height="75dp" />

            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/img_help"
                android:layout_weight=".5"
                android:layout_gravity="center"
                android:src="@mipmap/help"
                android:layout_width="75dp"
                android:layout_height="75dp" />

        </LinearLayout>
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:weightSum="1.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Community"
                android:layout_weight=".5"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Ads"
                android:layout_weight=".5"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Help"
                android:layout_weight=".5"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
    </LinearLayout>
